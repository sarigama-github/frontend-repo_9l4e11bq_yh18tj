{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "custom": {
      "swag": {
        "gradient": "linear-gradient(90deg, #7c5cff 0%, #00f6ff 50%, #ff6ad5 100%)"
      }
    },
    "color": {
      "palette": [
        { "slug": "bg", "name": "Background", "color": "#0a0b12" },
        { "slug": "bg-2", "name": "Background 2", "color": "#0e0f17" },
        { "slug": "text", "name": "Text", "color": "#e8eaf1" },
        { "slug": "muted", "name": "Muted", "color": "#a3a7b7" },
        { "slug": "accent", "name": "Accent", "color": "#7c5cff" },
        { "slug": "cyan", "name": "Cyan", "color": "#00f6ff" },
        { "slug": "pink", "name": "Pink", "color": "#ff6ad5" }
      ],
      "gradients": [
        { "slug": "swag", "name": "Swag Gradient", "gradient": "linear-gradient(90deg, #7c5cff 0%, #00f6ff 50%, #ff6ad5 100%)" }
      ]
    },
    "typography": {
      "fontFamilies": [
        { "fontFamily": "Manrope, system-ui, -apple-system, Segoe UI, Roboto, Helvetica Neue, Arial", "slug": "manrope", "name": "Manrope" },
        { "fontFamily": "Space Grotesk, Manrope, system-ui", "slug": "space-grotesk", "name": "Space Grotesk" }
      ],
      "fontSizes": [
        { "slug": "xs", "size": "12px" },
        { "slug": "sm", "size": "14px" },
        { "slug": "base", "size": "16px" },
        { "slug": "lg", "size": "20px" },
        { "slug": "xl", "size": "24px" },
        { "slug": "2xl", "size": "32px" },
        { "slug": "3xl", "size": "44px" },
        { "slug": "4xl", "size": "64px" },
        { "slug": "5xl", "size": "92px" }
      ]
    },
    "spacing": {
      "spacingScale": {
        "steps": 8
      }
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    }
  },
  "styles": {
    "color": {
      "background": "#0a0b12",
      "text": "#e8eaf1"
    },
    "typography": {
      "fontFamily": "Manrope, system-ui, -apple-system, Segoe UI, Roboto, Helvetica Neue, Arial",
      "lineHeight": "1.4"
    }
  },
  "customTemplates": [
    {
      "name": "home-swag",
      "title": "SwagSociety Home",
      "postTypes": ["page"]
    }
  ],
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" },
    { "name": "footer", "title": "Footer", "area": "footer" }
  ]
}
